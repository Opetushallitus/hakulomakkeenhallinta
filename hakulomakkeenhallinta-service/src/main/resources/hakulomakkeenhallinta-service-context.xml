<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder
            location="file:///${user.home:''}/oph-configuration/common.properties,
            file:///${user.home:''}/oph-configuration/hakulomakkeenhallinta.properties,
            file:///${user.home:''}/oph-configuration/override.properties"
            ignore-resource-not-found="true"/>

    <context:component-scan base-package="fi.vm.sade.hakulomakkeenhallinta"/>
    <bean id="modelMapper" class="org.modelmapper.ModelMapper"/>

    <bean id="conversionService" class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <list>
                <bean class="fi.vm.sade.hakulomakkeenhallinta.converter.HakuDTOToApplicationSystem" />
                <bean class="fi.vm.sade.hakulomakkeenhallinta.converter.KoodiTypeToCode"/>
                <bean class="fi.vm.sade.hakulomakkeenhallinta.converter.CodeToOption"/>
                <bean class="fi.vm.sade.hakulomakkeenhallinta.converter.CodeToPostOffice"/>
            </list>
        </property>
    </bean>

    <bean id="mongo" class="com.mongodb.MongoClient">
        <constructor-arg>
            <bean class="com.mongodb.MongoClientURI">
                <constructor-arg value="${mongodb.url}"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="morphia" class="org.mongodb.morphia.Morphia" />

    <bean id="applicationFormDAO" class="fi.vm.sade.hakulomakkeenhallinta.dao.ApplicationFormDAO">
        <constructor-arg>
            <ref bean="mongo"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg value="${mongo.db.name}"/>
    </bean>

</beans>